<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema oscuro con Material Components -->
    <style name="Theme.Yarvis" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Material Components colors -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>

        <!-- Text Input styling -->
        <item name="textInputStyle">@style/Widget.Yarvis.TextInputLayout</item>
    </style>

    <!-- Estilo para TextInputLayout -->
    <style name="Widget.Yarvis.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
        <item name="hintTextColor">@color/accent</item>
        <item name="android:textColorHint">@color/text_secondary</item>
    </style>
</resources>
