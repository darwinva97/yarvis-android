# Puerto del servidor
PORT=3000

# ==================== Modo Mock ====================
# Activar modo mock (respuestas simuladas sin backend real)
# Valores: true, 1, false, 0
MOCK_MODE=false

# Delay simulado en modo mock (ms)
MOCK_DELAY=500

# ==================== Workflow (modo real) ====================
# URL del webhook del sistema de automatizaci√≥n (n8n, Make, Zapier, etc.)
WORKFLOW_WEBHOOK_URL=http://localhost:5678/webhook/yarvis

# Timeout para peticiones al workflow (ms)
WORKFLOW_TIMEOUT=30000

# ==================== Sesiones ====================
# Timeout de inactividad para sesiones (ms) - default: 5 minutos
SESSION_TIMEOUT=300000
