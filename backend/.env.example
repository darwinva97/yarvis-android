# Puerto del servidor
PORT=3000

# ==================== Modo Mock ====================
# Activar modo mock (respuestas simuladas sin backend real)
# Valores: true, 1, false, 0
MOCK_MODE=false

# Delay simulado en modo mock (ms)
MOCK_DELAY=500

# ==================== Workflow (modo real) ====================
# URLs del webhook del sistema de automatización (n8n, Make, Zapier, etc.)
# Desarrollo (webhook-test - no requiere activación)
WORKFLOW_WEBHOOK_URL_DEV=http://localhost:5678/webhook-test/yarvis
WORKFLOW_WEBHOOK_USERNAME_DEV=your_dev_user
WORKFLOW_WEBHOOK_PASSWORD_DEV=your_dev_password

# Producción (webhook - requiere workflow activo)
WORKFLOW_WEBHOOK_URL_PROD=http://localhost:5678/webhook/yarvis
WORKFLOW_WEBHOOK_USERNAME_PROD=your_prod_user
WORKFLOW_WEBHOOK_PASSWORD_PROD=your_prod_password

# Timeout para peticiones al workflow (ms)
WORKFLOW_TIMEOUT=30000

# ==================== Sesiones ====================
# Timeout de inactividad para sesiones (ms) - default: 5 minutos
SESSION_TIMEOUT=300000

# ==================== API Auth (n8n -> backend) ====================
# BasicAuth para endpoints /api/* cuando n8n llama al backend
# Dejar vacío para deshabilitar autenticación
API_AUTH_USERNAME=
API_AUTH_PASSWORD=
